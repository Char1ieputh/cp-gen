{
  "name": "acm-template-p",
  "description": "ACM 示例模板生成器",
  "basePackage": "cp",
  "version": "1.0",
  "author": "cp",
  "createTime": "2024-03-27",
  "fileConfig": {
    "inputRootPath": ".source/acm-template-p",
    "outputRootPath": "generated",
    "sourceRootPath": "D:/work/study/cp-gennerator/demo/acm-template-p" ,
    "type": "dir",
    "files": [
      {
        "inputPath": "src/com/cp/acm/MainTemplate.java.ftl",
        "outputPath": "src/com/cp/acm/MainTemplate.java",
        "type": "file",
        "generateType": "dynamic"
      },
      {
        "inputPath": ".gitignore",
        "outputPath": ".gitignore",
        "type": "file",
        "generateType": "static",
        "condition": "needGit"
      },
      {
        "inputPath": "README.md",
        "outputPath": "README.md",
        "type": "file",
        "generateType": "static"
      }
    ]
  },
  "modelConfig": {
    "models": [
      {
        "fieldName": "needGit",
        "type": "boolean",
        "description": "是否生成.gitignore文件",
        "defaultValue": true,
        "abbr" : "n"
      },
      {
        "fieldName": "loop",
        "type": "boolean",
        "description": "是否生成循环",
        "defaultValue": false,
        "abbr": "l"
      },
      {
        "fieldName": "author",
        "type": "String",
        "description": "作者注释",
        "defaultValue": "cp",
        "abbr": "a"
      },
      {
        "fieldName": "outputText",
        "type": "String",
        "description": "输出信息",
        "defaultValue": "sum = ",
        "abbr": "o"
      }
    ]
  }
}